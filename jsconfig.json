{
  "compilerOptions": {
    /* Aliases */
    "baseUrl": "src",
    "paths": {
      "@ui/*": ["shared/ui/*"],
      "@styles/*": ["styles/*"],
      "@constants/*": ["shared/constants/*"],
      "@layout/*": ["layout/*"],
      "@pages/*": ["pages/index"],
      "@config/*": ["shared/config/*"],
      "@hooks/*": ["shared/hooks/*"],
      "@context/*": ["shared/context/*"],
      "@assets/*": ["shared/assets/*"],
      "@utils/*": ["shared/utils/*"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
